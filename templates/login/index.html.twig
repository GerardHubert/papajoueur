{% extends 'base.html.twig' %}

{% block title %}Papajoueur - Login
{% endblock %}

{% block body %}
	<section id="login-section" class='login-section'>
		<div class="login-form-container">
			<span class="login-form-title">Se connecter</span>
			{{ form_start(loginform, {'attr': {'class' : 'login-form'} }) }}
			<div class="login-form-row">
				{{ form_label(loginform.email, 'Adresse mail', {'label_attr': {'class' : 'login-form-email-label'} }) }}
				{{ form_widget(loginform.email, {'attr':
					{'class' : 'login-form-email-input',
						'placeholder' : 'Adresse mail'
					} 
				}) }}
				<i class="fa-solid fa-user user-input-icon"></i>
			</div>
			<div class="login-form-row">
				{{ form_label(loginform.password, 'Mot de passe', {'label_attr': {'class' : 'login-form-password-label'} }) }}
				{{ form_widget(loginform.password, {'attr': 
					{'class' : 'login-form-password-input',
						'placeholder': 'Mot de passe'
					} 
				}) }}
				<i class="fa-solid fa-lock password-input-icon"></i>
			</div>
			<div class="login-form-aside">
				<a href="#" class="forgotten-password-link">Mot de passe oubli√© ?</a>
				<a href="#" class="registration-link">Inscription</a>
			</div>
			<button class="login-form-submit">envoyer</button>
			{{ form_end(loginform) }}
		</section>
	</div>
{% endblock %}
